doctype html
html

  block vars

  head
    title #{title}
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/pure-min.css')
    link(rel='stylesheet', href='/stylesheets/grids-responsive-min.css')

    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description', content='Variety.js plugin directory')

body

#layout.pure-g
    .sidebar.pure-u-1.pure-u-md-1-4
        .header
          a(href='/')
            h1.brand-title Variety.js plugin directory
          h2.brand-tagline Extend variety.js to your needs!
          nav.nav
            ul.nav-list
              li.nav-item
                a.pure-button(href='http://www.varietyjs.org/') Documentation
              li.nav-item
                a.pure-button(href='https://github.com/variety/variety') GitHub
      .content.pure-u-1.pure-u-md-3-4
        div
          block content
          .footer
            .pure-menu.pure-menu-horizontal
              ul
                li.pure-menu-item
                  a.pure-menu-link(href='http://www.varietyjs.org/') About
                li.pure-menu-item
                  a.pure-menu-link(href='https://github.com/variety/variety') GitHub
                li.pure-menu-item
                  a.pure-menu-link(href='/status') Service status
